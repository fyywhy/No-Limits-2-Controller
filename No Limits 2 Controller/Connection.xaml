<Window x:Name="NL2_Connect_Window" x:Class="No_Limits_2_Controller.Connection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:No_Limits_2_Controller"
        mc:Ignorable="d"
        Title="Connection" Height="300" Width="300">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBox x:Name="tb_IPAddress" HorizontalAlignment="Left" Height="23" Margin="82,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_Connect" Content="Connect" HorizontalAlignment="Left" Margin="109,154,0,0" VerticalAlignment="Top" Width="75" Click="btn_Connect_Click"/>
        <Label x:Name="lbl_IPText" Content="Please Enter IP Address to Connect" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16" FontWeight="Bold" Width="272"/>

    </Grid>
</Window>
