<Window x:Class="No_Limits_2_Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:No_Limits_2_Controller"
        mc:Ignorable="d"
        Title="No Limits 2 Controller" Height="350" Width="525">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="btn_SendIdle" Content="Send Idle Message" HorizontalAlignment="Left" Margin="61,56,0,0" VerticalAlignment="Top" Width="121" Click="btn_SendIdle_Click"/>
        <Button x:Name="btn_ToggleGates" Content="Toggle Gates" HorizontalAlignment="Left" Margin="61,81,0,0" VerticalAlignment="Top" Width="121"/>
    </Grid>
</Window>
