<Window x:Name="ErrorDisplay1" x:Class="No_Limits_2_Controller.ErrorDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:No_Limits_2_Controller"
        mc:Ignorable="d"
        Title="Error" Height="300" Width="300">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="btn_Okerror" Content="OK" HorizontalAlignment="Left" Margin="108,227,0,0" VerticalAlignment="Top" Width="75" Click="btn_Okerror_Click"/>
        <TextBlock x:Name="tbl_ErrorMessage" HorizontalAlignment="Left" Margin="10,44,0,0" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Height="178" Width="272" Foreground="White" FontWeight="Bold"/>

    </Grid>
</Window>
